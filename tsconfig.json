{
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "module": "commonjs",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": false,
    "lib": [
      "es6",
      "es2016.array.include",
      "dom",
      "esnext"
    ],
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}